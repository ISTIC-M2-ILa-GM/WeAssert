<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.istic.gm.weassert.controller.MainController">
    <children>
        <AnchorPane minHeight="0.0" minWidth="0.0">
         <children>
            <VBox alignment="CENTER" prefWidth="600.0">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" text="Browse Maven project" fx:id="browseButton" onAction="#browseAction">
                           <HBox.margin>
                              <Insets right="8.0" />
                           </HBox.margin>
                        </Button>
                        <Label text="[No project selected]" fx:id="selectedFile" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="8.0" top="8.0" />
                     </VBox.margin></HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0">
                     <children>
                        <Button mnemonicParsing="false" text="Generate assertions">
                           <HBox.margin>
                              <Insets right="8.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" text="Launch tests" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="8.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="52.0">
                     <children>
                        <ProgressBar prefWidth="600.0" progress="0.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children></AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="300.0">
         <children>
            <TextArea editable="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children></AnchorPane>
    </children>
</VBox>
